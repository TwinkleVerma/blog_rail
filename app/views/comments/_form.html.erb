<div class="row">
  <div class="col-xs-12">
    <%= form_with url: article_comments_path(@article.id), :html => {class: "form-horizontal comment-form", role: "from"} do |form| %>
      <div class="form-group">
        <%= form.text_field :body, rows: 6, class: "form-control", id: "text", placeholder: "Enter Comment..." %>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class: "btn b tn-primary", id: "butt"%>
        </div>
      </div>
    <% end %>
  </div>
</div>