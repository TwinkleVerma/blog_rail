<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h4 style="font-weight: bold">Add a comment:</h4>
    </div>
    <div class="col-xs-12">
      <%= form_with(model: [ @article, @article.comments.build ], local: true, :html => {class: "form-horizontal", role: "from"}) do |form| %>
        <div class="form-group">
          <%= form.label :commenter, class: "col-sm-2 control-label"  %>
          <div class="col-sm-6">
            <%= form.text_field :commenter, class: "form-control", placeholder: "Enter Name..." %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :body , class: "col-sm-2 control-label" %>
          <div class="col-sm-6">
            <%= form.text_area :body, rows: 8, class: "form-control", placeholder: "Enter Comment..." %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit class: "btn btn-primary"%>
          </div>
        </div>
      <% end %>
    </div>
</div>