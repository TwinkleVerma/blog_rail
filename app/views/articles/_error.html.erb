<% if obj.errors.any? %>
<div class="row">
  <div class="col-xs-8 col-xs-offsset-2">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= pluralize(obj.errors.count,"error") %>
          Prohibited this article from saving:
        </h2>
        <div class="panel-body" id="error_explanation">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li style="color: red; list-style-type: none;"><%= msg %>*</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
