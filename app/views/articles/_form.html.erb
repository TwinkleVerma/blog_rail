<%= render 'error', obj: @article%>
<div class="row">
  <div class="col-xs-12">
    <%= form_with model: @article, local: true, :html => {class: "form-horizontal", role:"from"} do |form| %>
      <div class="form-group">
        <%= form.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_field :title, class: "form-control", placeholder: "Enter Title..." %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :Category, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.collection_select(:category_id, Category.all, :id, :name)%>
        </div>
      </div>
      <div class="form-group">
        <%= form.label :text, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_area :text, rows: 8, class: "form-control", placeholder: "Enter Title..." %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
    
    <div class="col-xs-4 col-xs-offset-4">
      <%= link_to 'Back', articles_path%>
    </div>
    
  </div>
</div>